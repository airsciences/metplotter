doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title='NWAC D3 Plotting'
    link(rel='stylesheet', href='bootstrap.min.css')
  body
    div(class='container')
      div(class='row-sm-12')
        div(class='pull-right btn-group')
          button(class='btn btn-sm btn-default' onclick='plotter.update()')='Update'
        h1='NWAC D3 Plotting Tool'
        small
          code="NWAC Emulator - v0.1 (Node.js)"
        div(id='d3-plot-target')
    script(src='jquery.min.js')
    script(src='bootstrap.min.js')
    script(src='d3.min.js')
    script(src='plotting.js')
    script.
      var options = {
          "target": "#d3-plot-target",
          "plotHandlerId": #{plotTemplateId}
      };
      var access = {
          "token": "#{token.token}",
          "expires": "#{token.expires}"
      };

      var plotter = new Plotting.Handler(access, options);
      plotter.initialize();
