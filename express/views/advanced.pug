doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title='NWAC Plotter Tool Demo'
    link(rel='stylesheet', href='/bootstrap.min.css')
    link(rel='stylesheet', href='/font-awesome.css')
  body
    div(class='container')
      div(class='row-sm-12')
        div(class='pull-right')
          ul(class="nav nav-pills")
            li(role="presentation")
              a(href='/')='Single'
            li(role="presentation")
              a(href='/multi')='Multiple'
        h1='NWAC Plotter Tool'
        h5=title
        div(id='d3-dropdown-test-target')
        div(id='d3-plot-target')
        br
        h4="Next Plotter"
        hr
        div(id='d3-plot-target-2')
        div(style='margin-bottom: 15px')
          small
            code="NWAC Emulator - (Node.js)"
    script(src='/jquery.min.js')
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDmlnWKI60J2KE3CP6XfqwemnJCjQkCMVU")
    script(src='/bootstrap.min.js')
    script(src='/d3.min.js')
    script(src='/plotting.js')
    script(src='/testing.js')
    script.
      var options = {
          "target": "#d3-plot-target",
          "templateId": #{templateId},
          "refresh": 1000,
          "futureWait": 180000,
          "initialLength": 168,
          "requestPaddingInterval": 10,
          "newDataInterval": 50,
          "updateLength": 24,
          "minUpdateLength": 10,
          "updateLimit": 6,
      };

      var access = {
          "token": "#{token.token}",
          "admin": false
      };

      var plotter214 = new Plotter.Handler(access, options);
      plotter214.initialize();

      /** Second Plotter */
      var options2 = {
          "target": "#d3-plot-target-2",
          "templateId": #{templateId},
          "refresh": 1000,
          "futureWait": 180000,
          "initialLength": 168,
          "requestPaddingInterval": 10,
          "newDataInterval": 50,
          "updateLength": 24,
          "minUpdateLength": 10,
          "updateLimit": 6,
      };

      var access2 = {
          "token": "#{token.token}",
          "admin": false
      };

      var plotter215 = new Plotter.Handler(access2, options2);
      plotter215.initialize();
